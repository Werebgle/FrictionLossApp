<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Settings"
        android:background="@android:color/background_light"
        android:id="@+id/settingsPage"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Set the Friction Loss for each of the listed items below. Hose Values are per 100 feet. Leave the Value 0 for items not used. Use the SAVE button to save. Use the CLEAR button to reset the values to 0."
                    android:id="@+id/textView11"
                    android:textSize="15sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/handFogTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="left|start"
                    android:gravity="center_horizontal"
                    android:visibility="visible"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textIsSelectable="false"
                    android:nextFocusDown="@+id/handSmoothTextView"/>

                <EditText
                    android:id="@+id/handSmoothTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="end"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/fogTextView"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settingsnozzle1"
                    android:id="@+id/textView3"
                    android:layout_gravity="left"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settingsnozzle2"
                    android:id="@+id/textView2"
                    android:layout_gravity="right"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fogTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/smoothTextView"/>

                <EditText
                    android:id="@+id/smoothTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="end"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/blitzFogTextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">


                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settingsnozzle3"
                    android:id="@+id/textView4"
                    android:layout_gravity="left"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settingsnozzle4"
                    android:id="@+id/textView5"
                    android:layout_gravity="right"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="fill_horizontal">

                <EditText
                    android:id="@+id/blitzFogTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="left|start"
                    android:gravity="center_horizontal"
                    android:visibility="visible"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/blitzSmoothTextView"/>

                <EditText
                    android:id="@+id/blitzSmoothTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="end"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/handlineTextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/blitzfog"
                    android:id="@+id/textView12"
                    android:layout_gravity="left"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/blitzsmooth"
                    android:id="@+id/textView13"
                    android:layout_gravity="right"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/handlineTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/handline2TextView"/>

                <EditText
                    android:id="@+id/handline2TextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="end"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/handline3TextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">


                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settings1handline"
                    android:id="@+id/textView6"
                    android:layout_gravity="left"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settings2handline"
                    android:id="@+id/textView7"
                    android:layout_gravity="right"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/handline3TextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:gravity="center_horizontal"
                    android:textIsSelectable="false"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/applianceTextView"/>

                <EditText
                    android:id="@+id/applianceTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="end"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:nextFocusDown="@+id/elevationTextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">


                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settings3handline"
                    android:id="@+id/textView8"
                    android:layout_gravity="left"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settingsappliances"
                    android:id="@+id/textView9"
                    android:layout_gravity="right"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/elevationTextView"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="start"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/settingselevation"
                    android:id="@+id/textView10"
                    android:layout_gravity="left"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_gravity="left|start"
                    android:background="#1313ff"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"/>

                <Button
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:layout_gravity="end|right"
                    android:id="@+id/clearButton"
                    android:background="#1313ff"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>
</ScrollView>